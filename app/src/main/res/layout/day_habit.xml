<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="2"
    android:padding="5dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/default_bd">

    <ImageView
        android:id="@+id/habitIV"
        android:src="@drawable/baseline_bolt_24"
        android:tint="@color/green"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_gravity="center"
        android:scaleY="2"
        android:scaleX="2"
        android:layout_width="50dp"/>

    <TextView
        android:id="@+id/CHName"
        android:text="Habit name"
        style="@style/HabitCalendarNameText"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal" />
    <TextView
        android:id="@+id/CHDesc"
        android:text="Habit desc"
        style="@style/HabitCalendarDescText"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:id="@+id/counterTV"
        android:text="Дней: 0"
        style="@style/DefaultText"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="2"
        android:padding="10dp"
        android:layout_gravity="center"/>


    <CheckBox
        android:id="@+id/CHCheck"
        style="@style/ColorCheckBox"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_rowSpan="2"
        android:layout_columnWeight="0"
        android:layout_gravity="center"
        android:scaleX="2"
        android:scaleY="2"
        />
</GridLayout>
