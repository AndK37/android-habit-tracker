<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="7"
    android:rowCount="2">
    <TextView
        android:id="@+id/weekday1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="ПН"
        style="@style/WeekCalendarText"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/weekday2"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="ВТ"
        style="@style/WeekCalendarText"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/weekday3"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="СР"
        style="@style/WeekCalendarText"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/weekday4"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="ЧТ"
        style="@style/WeekCalendarText"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/weekday5"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="ПТ"
        style="@style/WeekCalendarText"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/weekday6"
        android:layout_row="0"
        android:layout_column="5"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="СБ"
        style="@style/WeekCalendarText"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/weekday7"
        android:layout_row="0"
        android:layout_column="6"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:text="ВС"
        style="@style/WeekCalendarText"
        android:textAlignment="center"/>

    <CheckBox
        android:id="@+id/checkbox1"
        android:clickable="false"
        style="@style/ColorCheckBox"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center" />
    <CheckBox
        android:id="@+id/checkbox2"
        android:clickable="false"
        style="@style/ColorCheckBox"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>
    <CheckBox
        android:id="@+id/checkbox3"
        android:clickable="false"
        style="@style/ColorCheckBox"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>
    <CheckBox
        android:id="@+id/checkbox4"
        android:clickable="false"
        style="@style/ColorCheckBox"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>
    <CheckBox
        android:id="@+id/checkbox5"
        android:clickable="false"
        style="@style/ColorCheckBox"
        android:layout_row="1"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>
    <CheckBox
        android:id="@+id/checkbox6"
        android:clickable="false"
        style="@style/ColorCheckBox"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>
    <CheckBox
        android:id="@+id/checkbox7"
        android:clickable="false"
        style="@style/ColorCheckBox"
        android:layout_row="1"
        android:layout_column="6"
        android:layout_columnWeight="1"
        android:layout_gravity="center"/>
</GridLayout>
