<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lunasima_regular</item>
    </style>

    <style name="CalendarText" parent="DefaultText">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="WeekCalendarText" parent="DefaultText">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="HabitCalendarNameText">
        <item name="android:fontFamily">@font/lunasima_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="autoSizeMinTextSize">16sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>
    <style name="HabitCalendarDescText">
        <item name="android:fontFamily">@font/lunasima_regular</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>

    <style name="ColorCheckBox">
        <item name="buttonTint">@color/green</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="MonthCheckBox" parent="ColorCheckBox">
        <item name="android:clickable">false</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="MonthCalendarText" parent="CalendarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DefaultDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/default_bd</item>
        <item name="android:fontFamily">@font/lunasima_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonTextColor</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonTextColor</item>
    </style>
    <style name="PositiveButtonTextColor">
        <item name="android:fontFamily">@font/lunasima_regular</item>
        <item name="android:textColor">@color/red</item>
        <item name="backgroundColor">@color/transparent</item>
    </style>
    <style name="NegativeButtonTextColor">
        <item name="android:fontFamily">@font/lunasima_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>